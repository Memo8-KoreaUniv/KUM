{
  "name": "koa-nextjs-react-typescript-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "dev": "set NODE_ENV=dev && nodemon",
    "build": "set NODE_ENV=pro && next build && tsc --project tsconfig.server.json",
    "start": "set NODE_ENV=dev && NODE_ENV=production node dist/index.js",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{json,yaml,md}' --check",
    "prettier:fix": "prettier '**/*.{json,yaml,md}' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "prettier"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "core-js": "^3.9.1",
    "crypto": "^1.0.1",
    "dotenv": "^9.0.2",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-proxies": "^0.11.0",
    "koa-qs": "^3.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "mongoose": "^5.12.7",
    "next": "^10.0.9",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-proxies": "^0.9.0",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/next": "^9.0.0",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.9",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint-config-yceffort": "0.0.5",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
